<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">




    <TextView
        android:text="X waarde:  Y waarde: Z(waartekracht):"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_reading"
        android:gravity="left"
        android:layout_below="@+id/Acceleratie"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Acceleratie"
        android:id="@+id/Acceleratie"
        android:layout_marginTop="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroscope"
        android:id="@+id/stuurButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X waarde: Y waarde: Z waarde:"
        android:id="@+id/gyroscopeReading"
        android:layout_below="@+id/display_reading"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nu"
        android:id="@+id/nuButton"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/stuurButton"
        android:layout_alignStart="@+id/stuurButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leeg"
        android:id="@+id/arrayStuff"
        android:layout_alignBottom="@+id/nuButton"
        android:layout_alignParentStart="true" />


</RelativeLayout>
